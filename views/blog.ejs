<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
</head>

<body>

    <div class="container">

        <header>
            <%- include('partials/header') %>
        </header>
        
        <main>

            <div class="main-article">
                <% elencoArticoli.forEach(articolo=> { %>
                    <article>
                        <h2>
                            <%= articolo.titolo %>
                        </h2>
                        <p>
                            <%= articolo.descrizione %>
                        </p>
                    </article>
                    <% }); %>
            </div>
            
        </main>
        
        <footer>
            <%- include('partials/footer') %>
        </footer>

    </div>

</body>

</html>